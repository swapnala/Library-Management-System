


<%= render 'title_search_box' %>

<% if @books.present? %>
 
 <div class="container">
 <table class="table table-hover"  >
 	<!-- Page Content -->
   

        <!-- Page Features -->
        <div class="row text-center">

<% @books.each do |book| %>
<tr >
<td  >
<div class="thumbnail">
                    <img src="/assets/book.png" alt="">
</div>
</td>
<td width="80%">
 <!-- <div class="col-md-offset-3"> -->
<div class="panel panel-default">
  <div class="panel-heading">
  
    <h3 class="panel-title"><%= link_to(book.title, book) %></h3>
    <h5 >     - <%= book.author %></h5>
  </div>
  <div class="panel-body">
    <%= book.description %>
    
  </div>
  <div><%= book.ref %></div><div class="panel"> Tags:
  	<%= book.genre %>
  </div>
</div>
<!-- </div> -->
</td>
</tr>
<tr height="20px"></tr>
<% end %>
</div>
</table>
</div>
<% else %>
  <p>There are no books containing the term(s) <%= params[:search] %>.</p>
<% end %>